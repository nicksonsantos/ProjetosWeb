<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Nickson Endlich</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="resumo">
                <span class="oi oi-book" aria-hidden="true"></span> Resumo
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#" @onclick="ExpandirListaProjetos">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Projetos
            </NavLink>
            @if (expansaoListaProjetos)
            {
                <nav class="flex-column">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="bin2dec">
                            <span class="oi oi-calculator" aria-hidden="true"></span> Bin2Dec
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="calculadora">
                            <span class="oi oi-calculator" aria-hidden="true"></span> Calculadora
                        </NavLink>
                    </div>
                </nav>                
            }
        </div>        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expansaoListaProjetos;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }  

    private void ExpandirListaProjetos()
    {
        expansaoListaProjetos = !expansaoListaProjetos;
    }
}
